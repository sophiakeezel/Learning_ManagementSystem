<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.LearningManagement.Views.AddSubmissionView"
             Title="Manage Submission">
    <StackLayout Padding="20">
        <Label Text="Assignment Group" />
        <Picker x:Name="AssignmentGroupPicker" SelectedIndexChanged="AssignmentGroupPicker_SelectedIndexChanged" />
        
        <Label Text="Assignment" />
        <Picker x:Name="AssignmentPicker" SelectedIndexChanged="AssignmentPicker_SelectedIndexChanged" />

        <Label Text="Submission Content" />
        <Editor x:Name="SubmissionContentEditor" />

        <Button x:Name="SaveSubmissionButton" Text="Save Submission" Clicked="SaveSubmissionClicked" />
    </StackLayout>
</ContentPage>
